
<!-- hero sectie bij hoofdpagina -->
<section class="relative overflow-hidden" style="min-height: calc(100vh - 4rem);">
  
  <!-- background foto + gradient overlay -->
  <div class="absolute inset-0 bg-gradientAchtergrond"></div>
  <% if (typeof img !== "undefined") { %>
  <div class="absolute inset-0 opacity-10 bg-cover bg-center" style="background-image: url('<%= img %>');"> </div>
  <% } %>

  <!-- hero sectie -->
  <div class="container mx-auto px-4 relative z-10 flex items-center justify-center" style="min-height: calc(100vh - 4rem);">
    <div class="max-w-4xl text-center">

      <!-- titel -->
      <h1 class="text-5xl md:text-7xl font-bold mb-6 pb-3 bg-gradientkleurBR bg-clip-text text-transparent">
        <%- title %>
      </h1>

      <!-- subtekst -->
      <p class="text-xl text-gray-700 mb-8 max-w-2xl mx-auto">
        <%- subtext %>
      </p>

      <!-- knoppen -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">

        <% if(typeof knop1 !== "undefined") { %>
          <a href="/bezoekers" class="px-8 py-3 text-lg font-semibold rounded-full text-purple-500 border-2 border-purple-500 hover:bg-purple-500 hover:text-white transition-colors duration-300">
            <%= knop1 %>
          </a>
        <% } %>
        <% if(typeof knop2 !== "undefined") { %>
          <a href="/organisatoren" class="px-8 py-3 text-lg font-semibold rounded-full text-pink-500 border-2 border-pink-500 hover:bg-pink-500 hover:text-white transition-colors duration-300">
            <%= knop2 %>
          </a>
        <% } %>
      </div>

    </div>
  </div>
</section>
