<!-- deel -->
<div class="tab-content hidden" id="send">

    <div id="notificatieShare" class="fixed top-16 right-4 bg-green-500 text-white px-3 py-2 rounded opacity-0 transition-opacity duration-500 pointer-events-none z-50"></div>


    <div class="border rounded-2xl p-6 shadow-sm space-y-4">
        <h2 class="text-xl font-semibold">FestCoins Versturen</h2>
        <p class="text-gray-500">Verstuur Festcoins naar vrienden of famillie!</p>

        <form id="shareform" class="space-y-4">
            <div class="grid gap-2">
                <label for="shareReceiver" class="font-medium">Ontvanger (Id)</label>
                <input id="shareReceiver" placeholder="2426905" type="number" maxlength="7" oninput="this.value = this.value.slice(0, 7)"
                class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div class="grid gap-2">
                <label for="shareAmount" class="font-medium">Bedrag (FestCoins)</label>
                <input id="shareAmount" type="number" step="1" placeholder="1" min="1" max="<%= user.festCoins %>"
                class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <p id="festCoinsLimitsell2" class="text-sm text-gray-500">Beschikbaar: <%= user.festCoins %> FestCoins</p>
            </div>

            <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 flex justify-center items-center">
                Versturen
            </button>
            
            <p id="errorMsgShare" class="font-thin text-red-600 "></p>

        </form>
    </div>
</div>