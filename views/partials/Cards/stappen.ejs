<!-- card/item voor feature grid -->
<div class="border-2 rounded-lg shadow-lg p-8 text-center bg-white">

  <!-- kleine icoontje -->
  <div class="mb-4 flex justify-center">
    <img src="<%= icoon %>" alt="<%= icoonAlt %>" class="h-12 w-12 object-contain">
  </div>
  

  <!-- title -->
  <h3 class="text-xl font-semibold mb-2"><%= title %></h3>

  <!-- uitleg -->
  <p class="text-gray-700"><%= uitleg %></p>

  <% if(typeof knopNaam !== "undefined"){ %>
    <div class="mt-6 flex justify-center">
      <% if(knopHref !== "disable") { %>
        <a href="<%= knopHref %>" class="px-5 py-3 text-lg font-semibold rounded-full text-purple-500 border-2 border-purple-500 hover:bg-purple-500 hover:text-white transition-colors duration-300">
          <%= knopNaam %>
        </a>
      <% } else {%>
        <div class="px-5 py-3 text-lg font-semibold rounded-full text-gray-500 border-2 border-gray-500 inline-block text-center">
        <%= knopNaam %>
        </div>
      <% } %>
    </div>
  <% } %>
  
</div>
