<div class="flex flex-col" style="min-height: calc(100vh - 4rem);">
<!-- main content area: takes remaining space -->
    <div class="flex-1 flex items-center justify-center bg-gradient-to-br from-blue-300 via-purple-300 to-purple-300">
        <div class="w-full ">
            <h1 class="text-center text-9xl font-extrabold bg-gradient-to-br from-blue-500 via-purple-500 to-pink-500 bg-clip-text text-transparent"><%= code %></h1>
            <h1 class="text-center text-3xl font-bold bg-gradient-to-br from-blue-500 via-purple-500 to-pink-500 bg-clip-text text-transparent"><%= title %></h1>
            <% if(code === "404") { %>
                <div class="mx-auto w-1/3 p-4">
                    <h2 class="text-3xl font-semibold pt-10">De pagina dat u probeert te zoeken bestaat niet.</h2>
                    <h3 class="text-2xl font-semibold pt-8">Mogelijke redenen:</h3>
                    <ul class="list-disc pl-6 text-2xl">
                        <li>Het adres is incorrect geschreven</li>
                        <li>De pagina is niet langer in gebruik</li>
                    </ul>
                </div>
            <% } %>
        </div>
    </div>
</div>  