<section class="min-h-screen bg-gradient-to-br from-indigo-200 via-white to-pink-200 flex items-center justify-center p-4">

    <div id="notification-registreren" class="fixed top-20 z-[100] right-4 bg-green-500 text-white px-4 py-2 rounded-lg shadow-lg opacity-0 transform translate-y-[-20px] transition-all duration-500 pointer-events-none"></div>

    
    <div class="w-full max-w-2xl bg-white p-8 rounded-2xl shadow-xl">
        <div class="flex flex-col items-center mb-8">
            <a href="/home" class="text-5xl font-bold bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 bg-clip-text text-transparent">
                FestCoin
            </a>

            <h2 class="text-xl font-semibold mt-3 mb-2">Nieuw bij FestCoin? Registreer je nu!</h2>
            <p class="text-gray-500 text-center">Start mee met de nieuwe toekomst van cashless betalen op evenementen</p>
        </div>

        <!-- form voor registratie -->
        <form id="registratieform" class="space-y-4" novalidate>

            <!-- rol kiezen (bezoeker of organisator)-->
            <div>
                <p class="font-medium mb-2">Ben je een bezoeker of organisator?</p>
                <div class="flex gap-6">
                    <label class="flex items-center gap-2">
                        <input type="radio" name="role" value="bezoeker" required class="text-blue-500">
                        <span>Bezoeker</span>
                    </label>
                    <label class="flex items-center gap-2">
                        <input type="radio" name="role" value="organisator" required class="text-blue-500">
                        <span>Organisator</span>
                    </label>
                </div>
            </div>

            <!-- naam -->
            <div>
                <label for="name" class="block mb-1 font-medium">Gebruikersnaam</label>
                <input type="text" name="name" id="name" maxlength="30" required class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200"
                    placeholder="Artuurtje">
            </div>

            <!-- email -->
             <div>
                <label for="email" class="block mb-1 font-medium">E-mailadres</label>
                <input type="email" name="email" id="email" maxlength="50" required class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200"
                    placeholder="ArtuurHeidbuchel@gmail.com">
            </div>

            <!-- telefoon -->
            <div>
                <label for="phone" class="block mb-1 font-medium">Telefoonnummer</label>
                <input type="tel" id="phone" name="phone" maxlength="15" required class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200"
                    placeholder="+32 123456789">
            </div>

            <!-- wachtwoord -->
            <div>
                <label for="password" class="block mb-1 font-medium">Wachtwoord</label>
                <p class="text-xs text-gray-500 mt-1">(Gebruik minimaal 8 tekens, met een hoofdletter, kleine letter, cijfer en speciaal teken.)</p>
                <input type="password" id="password" name="password" maxlength="100" required class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200"
                    placeholder="•••••••••••">
            </div>
            <!-- Bevestig wachtwoord -->
            <div>
                <label for="confirmPassword" class="block mb-1 font-medium">Bevestig wachtwoord</label>
                <input id="confirmPassword" name="confirmPassword" type="password" maxlength="100" required
                    class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200"
                    placeholder="•••••••••••">
            </div>

            <!-- knop -->
            <button type="submit" 
                    class="w-full bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 text-white py-2 rounded-lg font-semibold hover:opacity-90 shadow-md">
                Account aanmaken ➜
            </button>

            <!-- error -->
            <% if(typeof error !== "undefined") { %>
                <p class="font-thin text-red-600 "><%= error %></p>
            <% } %>
        </form>

        <div class="mt-6 text-center">
            <p class="text-sm text-gray-500">
                Heb je al een account?
                <a href="/inloggen" class="text-blue-600 hover:underline font-semibold">Log hier in</a>
            </p>
        </div>

        <div class="mt-8 pt-6 border-t border-gray-200">
            <p class="text-xs text-gray-500 text-center">
                Door een account aan te maken ga je akkoord met onze
                <a href="/voorwaarden" class="text-blue-600 hover:underline">Algemene voorwaarden</a> en
                <a href="/privacy" class="text-blue-600 hover:underline">Privacybeleid</a>.
            </p>
        </div>
    </div>

</section>



<script>
    document.getElementById("registratieform").addEventListener("submit", async (e) => {
        e.preventDefault();
        const form = e.target;
        const errorMsg = form.querySelector(".text-red-600") || document.createElement("p");
        errorMsg.className = "font-thin text-red-600";
        if(!form.contains(errorMsg)) form.appendChild(errorMsg);

        const formData = {
            role: form.role.value,
            name: form.name.value,
            email: form.email.value,
            phone: form.phone.value,
            password: form.password.value,
            confirmPassword: form.confirmPassword.value
        };

        // Check lege velden 
        if (!formData.name || !formData.email || !formData.phone || !formData.password || !formData.confirmPassword) { 
            errorMsg.textContent = "Vul alle velden in!"; 
            return; 
        }

        if (!/\S+@\S+\.\S+/.test(formData.email)) {
            errorMsg.textContent = "Ongeldig e-mailadres";
            return;
        }

        // telefoon check
        const phoneRegex = /^(?:\+32|0)(?:[4][789]\d{2}[\s.-]?\d{3}[\s.-]?\d{2}|[1-9]\d{1,2}[\s.-]?\d{2,3}[\s.-]?\d{2,3})$/;

        if (!phoneRegex.test(formData.phone)) {
            errorMsg.textContent = "Ongeldig telefoonnummer";
            return;
        }

        const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*])[A-Za-z\d!@#$%^&*]{8,}$/;
        if (!passwordRegex.test(formData.password)) {
            errorMsg.textContent = "Wachtwoord is niet veilig genoeg!";
            document.getElementById("password").value = "";
            document.getElementById("confirmPassword").value = "";
            return;
        }


        if(formData.confirmPassword === ""){
            errorMsg.textContent = "Bevestig je wachtwoord!";
            return;
        }

        if (formData.password !== formData.confirmPassword) {
            errorMsg.textContent = "Wachtwoorden komen niet overeen!";
            document.getElementById("password").value = "";
            document.getElementById("confirmPassword").value = "";
            return;
        }

        try {
            const res = await fetch("/register", {
                method: "POST",
                headers: {"Content-Type": "application/json"},
                body: JSON.stringify(formData)
            });
            const data = await res.json();
            if(data.success) {
                showNotification("Account succesvol aangemaakt!");
                setTimeout(() => window.location.href = "/dashboard", 1000);
            } else {
                errorMsg.textContent = data.error;
            }
        } catch (err) {
            errorMsg.textContent = "Er is iets misgegaan...";
            console.error(err);
        }
    });

</script>

<script>
    function showNotification(message, type = "success") {
        const notif = document.getElementById("notification-registreren");
        notif.textContent = message;

        // pas kleur aan
        notif.className = `fixed top-[16px] right-4 px-4 py-2 rounded-lg shadow-lg opacity-0 transform -translate-y-10 transition-all duration-500 pointer-events-none 
            ${type === "success" ? "bg-green-500 bg-opacity-70" : "bg-red-500 bg-opacity-70"} z-[999]`;


        // Animatie in
        requestAnimationFrame(() => {
            notif.classList.remove("opacity-0", "-translate-y-10");
        });

        // Na 3 sec uit
        setTimeout(() => {
            notif.classList.add("opacity-0", "-translate-y-10");
        }, 1000);
    }
</script>