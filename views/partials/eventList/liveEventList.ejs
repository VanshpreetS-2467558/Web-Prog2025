<section class="container mx-auto py-10">
    <div class="mb-6 flex justify-between items-center">
        <div>
            <h2 class="text-3xl font-bold mb-2">Live Evenementen</h2>
            <p class="text-muted-foreground">Klik op de evenement waar je aanwezig bent!</p>
        </div>
        <form method="GET" action="#" class="relative">
            <input type="text" name="search" placeholder="Zoek evenement..." class="w-72 border border-gray-400 rounded-lg px-3 py-2 pl-8 focus:outline-none focus:ring-2 focus:ring-blue-500"/>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 absolute left-2 top-3 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M11 19a8 8 0 100-16 8 8 0 000 16z" />
            </svg>
        </form>
    </div>


    <!-- placeholders -->
    <% const liveEvents = [{id: "1",name: "Zomer Festival 2024",location: "Amsterdam, Vondelpark",description: "Het grootste zomerfestival van het jaar",startDate: "2024-07-15T14:00",endDate: "2024-07-15T23:00",attendees: 1247},{id: "2",name: "Techno Night",location: "Rotterdam, Warehouse",description: "Non-stop techno tot de vroege ochtend",startDate: "2024-07-20T22:00",endDate: "2024-07-21T06:00",attendees: 532}]; %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% if (liveEvents.length > 0) { %>
            <% liveEvents.forEach(event => { %>
                <div class="border rounded-2xl p-4 hover:shadow-lg transition-shadow cursor-pointer" onclick="window.location.href='#'"> <!-- /event/<%= event.id %> ?? -->
                    <div class="flex justify-between items-start mb-2">
                        <span class="bg-green-500 text-white text-xs px-2 py-1 rounded">Live!</span>
                        <p class="text-sm text-gray-500"><%= event.attendees %> bezoekers</p>
                    </div>

                    <h3 class="text-xl font-semibold"><%= event.name %></h3>
                    <div class="text-gray-500 text-sm mt-2">
                        <div class="flex items-center gap-2">
                            <i class="fa fa-map-marker-alt"></i> <%= event.location %>
                        </div>
                        <div class="flex items-center gap-2 mt-1">
                            <i class="fa fa-calendar"></i>
                            <%= new Date(event.startDate).toLocaleString('nl-NL', { day: 'numeric', month: 'short', hour: '2-digit', minute: '2-digit' }) %> -
                            <%= new Date(event.endDate).toLocaleString('nl-NL', { hour: '2-digit', minute: '2-digit' }) %>
                        </div>
                    </div>

                    <p class="text-sm mt-4 mb-4"><%= event.description %></p>
                </div>
            <% }) %>
            <% } else { %>
                <div class="border rounded-2xl py-12 text-center text-gray-500">
                    Er zijn momenteel geen live evenementen
                </div>
            <% } %>
        </div>
    </div>
</section>




