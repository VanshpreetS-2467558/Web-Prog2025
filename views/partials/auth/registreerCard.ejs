<section class="min-h-screen bg-gradient-to-br from-indigo-200 via-white to-pink-200 flex items-center justify-center p-4">
    
    <div class="w-full max-w-2xl bg-white p-8 rounded-2xl shadow-xl">
        <div class="flex flex-col items-center mb-8">
            <a href="/home" class="text-5xl font-bold bg-gradientkleurR bg-clip-text text-transparent">
                FestCoin
            </a>

            <h2 class="text-xl font-semibold mt-3 mb-2">Nieuw bij FestCoin? Registreer je nu!</h2>
            <p class="text-gray-500 text-center">Start mee met de nieuwe toekomst van cashless betalen op evenementen</p>
        </div>

        <!-- form voor registratie -->
        <form id="registratieform" class="space-y-4" novalidate>

            <!-- rol kiezen (bezoeker of organisator)-->
            <div>
                <p class="font-medium mb-2">Ben je een bezoeker of organisator?</p>
                <div class="flex gap-6">
                    <label class="flex items-center gap-2">
                        <input type="radio" name="role" value="bezoeker" required class="text-blue-500">
                        <span>Bezoeker</span>
                    </label>
                    <label class="flex items-center gap-2">
                        <input type="radio" name="role" value="organisator" required class="text-blue-500">
                        <span>Organisator</span>
                    </label>
                </div>
            </div>

            <!-- naam -->
            <div>
                <label for="name" class="block mb-1 font-medium">Gebruikersnaam</label>
                <input type="text" name="name" id="name" maxlength="30" required class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200"
                    placeholder="Artuurtje">
            </div>

            <!-- email -->
             <div>
                <label for="email" class="block mb-1 font-medium">E-mailadres</label>
                <input type="email" name="email" id="email" maxlength="50" required class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200"
                    placeholder="ArtuurHeidbuchel@gmail.com">
            </div>

            <!-- telefoon -->
            <div>
                <label for="phone" class="block mb-1 font-medium">Telefoonnummer</label>
                <input type="tel" id="phone" name="phone" maxlength="15" required class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200"
                    placeholder="+32 123456789">
            </div>

            <!-- wachtwoord -->
            <div>
                <label for="password" class="block mb-1 font-medium">Wachtwoord</label>
                <p class="text-xs text-gray-500 mt-1">(Gebruik minimaal 8 tekens, met een hoofdletter, kleine letter, cijfer en speciaal teken.)</p>
                <input type="password" id="password" name="password" maxlength="100" required class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200"
                    placeholder="•••••••••••">
            </div>
            <!-- Bevestig wachtwoord -->
            <div>
                <label for="confirmPassword" class="block mb-1 font-medium">Bevestig wachtwoord</label>
                <input id="confirmPassword" name="confirmPassword" type="password" maxlength="100" required
                    class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring focus:ring-blue-200"
                    placeholder="•••••••••••">
            </div>

            <!-- knop -->
            <button type="submit" 
                    class="w-full bg-gradientkleurR text-white py-2 rounded-lg font-semibold hover:opacity-90 shadow-md">
                Account aanmaken ➜
            </button>

            <!-- error msg box -->
            <p id="errorMsg" class="font-thin text-red-600 "></p>
            
        </form>

        <div class="mt-6 text-center">
            <p class="text-sm text-gray-500">
                Heb je al een account?
                <a href="/inloggen" class="text-blue-600 hover:underline font-semibold">Log hier in</a>
            </p>
        </div>

        <div class="mt-8 pt-6 border-t border-gray-200">
            <p class="text-xs text-gray-500 text-center">
                Door een account aan te maken ga je akkoord met onze
                <a href="/voorwaarden" class="text-blue-600 hover:underline">Algemene voorwaarden</a> en
                <a href="/privacy" class="text-blue-600 hover:underline">Privacybeleid</a>.
            </p>
        </div>
    </div>

</section>


<script type="module" src="/js/registerScripts.js"></script>
