<!-- card/item voor feature grid -->
<div class="border border-purple-600 rounded-lg shadow-lg p-6 text-center bg-white transform transition-transform duration-300 hover:scale-105">

  <!-- kleine icoontje -->
  <div class="mb-4 flex justify-center">
    <img src="<%= icoon %>" alt="<%= title %>" class="h-12 w-12 object-contain">
  </div>

  <!-- title -->
  <h3 class="text-xl font-bold mb-2"><%= title %></h3>

  <!-- uitleg -->
  <p class="text-gray-700"><%= uitleg %></p>
  
</div>
