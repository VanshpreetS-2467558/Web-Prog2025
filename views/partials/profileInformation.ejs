
<div class="max-w-4xl mx-auto p-6">
  
  <div class="space-y-4">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Profielinstellingen</h1>
      <p class="text-gray-500 mt-2">Beheer je accountinstellingen en voorkeuren</p>
    </div>

    <!-- Personal Information Card -->
    <div class="border rounded-2xl shadow-sm p-6">
      <div class="mb-4">
        <div class="flex items-center gap-2 mb-1">
          <h2 class="text-lg font-semibold">Persoonlijke Informatie</h2>
        </div>
      </div>

      <div class="space-y-4">
          <div class="space-y-1">
              <div for="name" class="block font-medium text-gray-700">Klantennummer (Id)</div>
              <div class="border rounded-lg px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-blue-500"><%= user.id%></div>
          </div>

          <div class="space-y-1">
              <label for="name" class="block font-medium text-gray-700">Naam</label>
              <input id="name" name="name" type="text" placeholder="Artuur"
                  class="border rounded-lg px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                  value="<%= user.name || '' %>">
          </div>

          <div class="space-y-1">
              <label for="email" class="block font-medium text-gray-700">E-mailadres</label>
              <input id="email" name="email" type="email" placeholder="email@example.com"
                  class="border rounded-lg px-3 py-2 w-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                  value="<%= user.email || '' %>">
          </div>

        <button class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-700">
          Profiel Bewerken
        </button>
        <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
          Profiel opslaan
        </button>
      </div>
    </div>
  </div>
</div>

